
<%= simple_form_for(@mantenciondesviacion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fecha %>
    <%= f.input :hora_inicio %>
    <%= f.input :hora_termino %>
    <%= f.input :tratamiento %>
    <%= f.input :afecta %>
    <%= f.association :area %>
    <%= f.association :sector %>
    <%= f.association :equipos %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
