
<%= simple_form_for(@operecionesaveri) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fecha %>
    <%= f.input :hora_averia %>
    <%= f.input :observacion %>
    <%= f.input :condicion %>
    <%= f.input :afecta %>
    <%= f.association :area %>
    <%= f.association :sector %>
    <%= f.association :equipo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
